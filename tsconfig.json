{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",

    // Bundler mode.
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "react-jsx",

    // Linting.
    "allowJs": false,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,

    // Debugging.
    "sourceMap": true,
  },
  "include": [
    "src/**/*"
  ],
}
